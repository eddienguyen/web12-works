<div class="container home-handlebars">
    <h1 class="text-center">{{question.content}}</h1>
    <div class="row" id="btn-answer">
        <div class="col-md-6 text-center">
            <a href="/question/{{question._id}}/no">
                <button type="button" class="btn btn-danger btn-lg">
                    <i class="far fa-thumbs-down"></i> Sai/ Không/ Trái
                </button>
            </a>
        </div>
        <div class="col-md-6 text-center">
            <a href="/question/{{question._id}}/yes">
                <button type="button" class="btn btn-primary btn-lg">
                    <i class="far fa-thumbs-up"></i> Đúng/ Có/ Phải 
                </button>
            </a>
        </div>
    </div>
    <div class="text-center" id="btn-navigate">
            <a href="/question/{{question._id}}">
                <button type="button" class="btn btn-outline-light">Kết quả vote</button>
            </a>
            <a href="/">
                <button type="button" class="btn btn-outline-light">Câu hỏi khác</button>
            </a>
    </div>
</div>
